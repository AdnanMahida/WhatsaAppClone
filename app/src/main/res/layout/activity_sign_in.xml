<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.authentication.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_100"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_whatsapp" />

        <EditText
            android:id="@+id/signin_edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:background="@color/white"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dp_8" />

        <EditText
            android:id="@+id/signin_edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:background="@color/white"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/dp_8" />

        <TextView
            android:id="@+id/signin_txt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_8"
            android:padding="@dimen/dp_3"
            android:text="@string/click_for_signup" />

        <Button
            android:id="@+id/signin_btn_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/sign_in"
            app:cornerRadius="@dimen/dp_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signin_btn_google"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_3"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_google_24dp"
                android:gravity="center"
                android:text="Google"
                android:textColor="@color/black"
                app:cornerRadius="@dimen/dp_3" />

            <Button
                android:id="@+id/signin_btn_facebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_3"
                android:layout_weight="1"
                android:backgroundTint="@color/fb_color"
                android:drawableLeft="@drawable/ic_facebook_24dp"
                android:gravity="center"
                android:text="@string/facebook"
                app:cornerRadius="@dimen/dp_3" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SignUp With Phone"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</LinearLayout>